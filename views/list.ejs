                <ul id="SmallMenu2">
                  <li><a href="<%= process.env.SERVER_HOST %>/web">Web</a></li>
                  <li><a href="<%= process.env.SERVER_HOST %>/mobile">Mobile</a></li>
                  <li><a href="<%= process.env.SERVER_HOST %>/dataAnalysis">Data Analysis</a></li>
                  <li><a href="<%= process.env.SERVER_HOST %>/ai">AI</a></li>
                </ul>
              <li><a href="<%= process.env.SERVER_HOST %>/question">질문 게시판</a></li>
            </ul>
        </div>
      </nav>
    </header>
    <script>
        function showModal() {
            var modal = document.getElementById("Modal");
            modal.style.display = "block";
        }

        function closeModal() {
            var modal = document.getElementById("Modal");
            modal.style.display = "none";
        }

        function openMenu(){
            $('.topMenu').css('display','block');
            $('.close-menu').css('display','block');
            $('.open-menu').css('display','none');
            $('.topMenu-ul').css('background','black');
            $('.middle-apply').css('opacity','0.5');
            $('.footer').css('opacity','0.5');
        }

        function closeMenu(){
            $('.topMenu').css('display','none');
            $('.topMenu-ul').css('background','none');
            $('.close-menu').css('display','none');
            $('.open-menu').css('display','block');
            $('.middle-apply').css('opacity','1');
            $('.footer').css('opacity','1');
            
        }

        function OpenSmallMenu(num){
            var result = '#SmallMenu'+num;
            $(result).css('dislay','block');

        }

        document.forms['writeForm'].addEventListener('submit', (event) => {
        event.preventDefault();
        // TODO do something here to show user that form is being submitted
        fetch(event.target.action, {
            method: 'POST',
            body: new URLSearchParams(new FormData(event.target)) // event.target is the form
        }).then((resp) => {
            return resp.json(); // or resp.text() or whatever the server sends
        }).then((body) => {
            // TODO handle body
            console.log(body);
        }).catch((error) => {
            // TODO handle error
        });

        window.onclick = function(event) {
            var modal = document.getElementById("Modal");
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
});

    </script>  
    
    <!-- Modal -->
    <div id="Modal" class="modal">
        <form class="modal-content animate" id="writeForm" action="/write" method="post">
            <div class="xcontainer">
                <span onclick="document.getElementById('Modal').style.display='none'" class="close" title="Close Modal">&times;</span>
            </div>
      
            <div class="modalContainer">
                <input type="password" class="pwd" placeholder="Enter Password" name="pwd" required>
                <button type="submit" class="modalButton">Login</button>
            </div>
        </form>
    </div>

    <!--상단 게시판 제목-->
    <div class="contents">
        <div class="title">
            <% if(data.length > 0){ %>
            <h2><%= data[0].category %></h2>
            <sup class="total">12</sup>
        </div>
        <div class="write-btn">
            <button class="write-button" onclick="showModal()"><i class="far fa-edit"></i></button>
        </div>
        <!--상단 제목 ~ 하단 Load more-->
        <div class="project-cards-container">
            
                <% for (var i = 0; i< data.length;i++){ %>
                <!--프로젝트 게시물 전체-->
                <div class="project-cards">
                    <!-- 프로젝트 게시물 개별 -> 한번에 6개 보여줌-->
                        <div class="project-card-component">
                            <a class="project-views" href="<%= process.env.SERVER_HOST %>/post/<%=data[i]._id%>?category=<%=data[i].category%>">
                                <img src="../images/project.png" alt="" class="project-thumbnail">
                                <p class="name"><%= data[i].title %></p>
                                <p class="time">2022</p>
                            </a>
                            <div class="links">
                                <div class="link-item">
                                    <p>Go to Page</p>
                                </div>
                            </div>
                        </div>        
                </div>
                <% } %>
            
            <div class="load-more">
                <div class="load-more-btn">
                    <p>Load more</p>
                    <i class="fas fa-chevron-down"></i>
                </div>
                <% }else{ %>
                    <script>
                        alert('빈 게시글 입니다.');
                    </script>
                <% } %>
            </div>
        </div>
    </div>
